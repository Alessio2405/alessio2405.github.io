---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const fmt = (d: Date) => d.toISOString().slice(0, 10); // YYYY-MM-DD

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout title={`${post.data.title} - Alessio2405.github.io`}>
  <article>
    <pre class="text-[var(--fg-dim)] text-xs mb-4">$ cat ~/blog/{post.slug}.md</pre>

    <header class="mb-8 border-b border-[var(--border)] pb-4">
      <h1 class="text-xl mb-2">{post.data.title}</h1>

      <div class="text-xs text-[var(--fg-dim)] mb-2">
        {fmt(post.data.date)}
      </div>

      {post.data.description && (
        <p class="text-sm text-[var(--fg-dim)]">{post.data.description}</p>
      )}
    </header>

    <div class="prose prose-sm max-w-none">
      <Content />
    </div>

    <div class="mt-8 pt-4 border-t border-[var(--border)]">
      <a href="/blog" class="text-[var(--fg-dim)]">&lt;- back to /blog</a>
    </div>
  </article>
</Layout>
