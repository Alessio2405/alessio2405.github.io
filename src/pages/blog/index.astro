---
import Layout from "../../layouts/Layout.astro";
import CliNav from "../../components/CliNav.astro";
import { getCollection } from "astro:content";

const fmt = (d: Date) => d.toISOString().slice(0, 10); // YYYY-MM-DD

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.date.getTime() - a.data.date.getTime()
);
---

<Layout title="Blog - Alessio2405.github.io">
  <pre class="text-[var(--fg-dim)] text-xs mb-4">$ ls -la ~/blog/</pre>

  <h1 class="text-xl mb-6">/blog</h1>

  {
    posts.length > 0 ? (
      <div>
        {posts.map((post) => (
          <div class="mb-4">
            <div>
              <span class="text-[var(--fg-dim)] text-xs">
                {fmt(post.data.date)}
              </span>
              <a href={`/blog/${post.slug}`} class="ml-2">
                {post.data.title}
              </a>
            </div>

            {post.data.description && (
              <p class="text-[var(--fg-dim)] text-sm ml-4">
                {post.data.description}
              </p>
            )}
          </div>
        ))}
      </div>
    ) : (
      <p class="text-[var(--fg-dim)]">No posts yet.</p>
    )
  }

  <CliNav initialCwd="~/blog" />

  <div class="mt-8">
    <a href="/" class="text-[var(--fg-dim)]">&lt;- back</a>
  </div>
</Layout>
