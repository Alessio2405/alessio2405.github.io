---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const projects = await getCollection("projects");
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const fmt = (d: Date) => d.toISOString().slice(0, 10); // YYYY-MM-DD

const { project } = Astro.props;
const { Content } = await project.render();
---

<Layout title={`${project.data.title} - Alessio2405.github.io`}>
  <article>
    <pre class="text-[var(--fg-dim)] text-xs mb-4">$ cat ~/projects/{project.slug}.md</pre>

    <header class="mb-8 border-b border-[var(--border)] pb-4">
      <h1 class="text-xl mb-2">{project.data.title}</h1>

      <div class="text-xs text-[var(--fg-dim)] mb-2">
        {fmt(project.data.date)}
      </div>

      <p class="text-sm text-[var(--fg-dim)]">{project.data.description}</p>
    </header>

    <div class="prose prose-sm max-w-none">
      <Content />
    </div>

    <div class="mt-8 pt-4 border-t border-[var(--border)]">
      <a href="/projects" class="text-[var(--fg-dim)]">&lt;- back to /projects</a>
    </div>
  </article>
</Layout>
